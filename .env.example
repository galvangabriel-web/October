# ============================================================
# DEPLOYMENT CONFIGURATION
# ============================================================
# Copy this file to .env and fill in your actual values
# The .env file is ignored by git for security

# ============================================================
# SSH CONNECTION (Linux Server)
# ============================================================
SSH_HOST=your.server.ip.address
SSH_PORT=22
SSH_USER=your_username
SSH_PASSWORD=your_password_here
# Alternative: Use SSH key instead of password
# SSH_KEY_PATH=/path/to/your/private/key

# ============================================================
# SERVER PATHS
# ============================================================
# Where to deploy the application on the server
DEPLOY_PATH=/home/your_username/racing_analytics
# Python virtual environment path on server
VENV_PATH=/home/your_username/racing_analytics/venv

# ============================================================
# APPLICATION CONFIGURATION
# ============================================================
# Dashboard port (default: 8050)
DASHBOARD_PORT=8050
# API port (default: 8000)
API_PORT=8000
# Host to bind to (0.0.0.0 for all interfaces, 127.0.0.1 for localhost only)
DASHBOARD_HOST=0.0.0.0
API_HOST=0.0.0.0

# ============================================================
# RESOURCE CONFIGURATION (Full Capabilities Mode)
# ============================================================
# Enable full memory usage (set to true after RAM upgrade)
ENABLE_FULL_MEMORY=true
# Max workers for API (adjust based on RAM)
API_WORKERS=4
# Load all telemetry chunks (true) or single chunk (false)
LOAD_ALL_CHUNKS=true

# ============================================================
# OPTIONAL: DATABASE (for future use)
# ============================================================
# DATABASE_URL=postgresql://user:password@localhost/racing_db

# ============================================================
# OPTIONAL: MONITORING
# ============================================================
# ENABLE_MONITORING=true
# PROMETHEUS_PORT=9090

# ============================================================
# OPTIONAL: SSL/HTTPS (for production)
# ============================================================
# ENABLE_SSL=false
# SSL_CERT_PATH=/etc/ssl/certs/your_cert.pem
# SSL_KEY_PATH=/etc/ssl/private/your_key.pem
